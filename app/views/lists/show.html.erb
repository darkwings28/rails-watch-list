<div class="container">
  <h2><%= @list.name %></h2>
  <hr>

  <p> Movies:</p>
  <% @list.bookmarks.each do |bookmark| %>    
  <% movie = Movie.find(bookmark.movie_id)%> 
  <div class="container">
    <p>     
    <strong>Title: </strong><%= movie.title %> 
    </p>
    <p>   
    <strong>Comment: </strong><%= bookmark.comment %>     </p>
    </div>
    <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'btn btn-danger btn-sm' %>
    <hr>
    <% end %>

    <div class="buttons">
    <%= link_to "Back", lists_path, class:'btn btn-primary btn-sm' %>
    <%= link_to "New Bookmark", new_list_bookmark_path(@list), class:'btn btn-info btn-sm' %>
    </div>
  
  </div>